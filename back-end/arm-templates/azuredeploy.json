{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",    
    "parameters": {
        "region": {
            "type": "string"
        },
        "resource_group": {
            "type": "string"
        },
        "template_uri_cosmos_db": {
            "type": "string"
        },
        "template_uri_storage": {
            "type": "string"
        },
        "template_uri_func_app": {
            "type": "string"
        },
        "template_uri_cdn_profile": {
            "type": "string"
        },
        "template_uri_dns-zone": {
            "type": "string"
        },
        "storage_account_name": {
            "type": "string"
        },
        "cdn_profile_name": {
            "type": "string"
        },
        "cdn_endpoint_name": {
            "type": "string"
        },
        "cosmos_db_account_name": {
            "type": "string"
        },
        "cosmos_db_name": {
            "type": "string"
        },
        "cosmos_db_container": {
            "type": "string"
        },
        "cosmos_db_location": {
            "type": "string"
        },
        "function_app_name": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "exampleVar": "from azuredeploy.json template!"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "linkTemplateCosmosDB",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[parameters('template_uri_cosmos_db')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmos_db_location": {
                        "value": "[parameters('cosmos_db_location')]"
                    },
                    "cosmos_db_account_name": {
                        "value": "[parameters('cosmos_db_account_name')]"
                    },
                    "cosmos_db_name": {
                        "value": "[parameters('cosmos_db_name')]"
                    },
                    "cosmos_db_container": {
                        "value": "[parameters('cosmos_db_container')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "linkTemplateStorage",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[parameters('template_uri_storage')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "region": {
                        "value": "[parameters('region')]"
                    },
                    "func_app_name": {
                        "value": "[parameters('function_app_name')]"
                    },
                    "storage_account_name": {
                        "value": "[parameters('storage_account_name')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "result": {
            "type": "string",
            "value": "[variables('exampleVar')]"
        }
    }
}