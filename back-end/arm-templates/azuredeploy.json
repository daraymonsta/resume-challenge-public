{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "template_uri_cosmos_db": {
            "type": "String"
        },
        "region": {
            "type": "String"
        },
        "cosmos_db_account_name": {
            "type": "String"
        },
        "cosmos_db_name": {
            "type": "String"
        },
        "cosmos_db_container": {
            "type": "String"
        },
        "randomId": {
            "type": "String"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "linkTemplateCosmosDB",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[parameters('template_uri_cosmos_db')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmos_db_location": {
                        "value": "[parameters('region')]"
                    },
                    "cosmos_db_account_name": {
                        "value": "[concat(parameters('cosmos_db_account_name'), parameters('randomId'))]"
                    },
                    "cosmos_db_name": {
                        "value": "[parameters('cosmos_db_name')]"
                    },
                    "cosmos_db_container": {
                        "value": "[parameters('cosmos_db_container')]"
                    }
                }
            }
        }
    ],
    "outputs": {

    }
}